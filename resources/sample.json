{
    "inputOutputFile": {
      "inputFilePath": "resources/2010-12-01.csv",
      "inputFileFormat": "csv",
      "inputFileDelimiter": ",",
      "inputFileHasHeader": "true"
    },

    "transforms": [

      {
        "ttype": "directMap",
        "rule": "Quantity",
        "dest": "Q1"
      },
      {
        "rule": "rand()",
        "dest": "randCol"
      },
      {
        "ttype": "directMap",
        "rule": "UnitPrice",
        "dest": "UP"
      },
      {
        "ttype": "defaultMap",
        "rule": "USD",
        "dest": "Currency"
      },
      {
        "ttype": "ifElse",
        "rule": "case when Quantity = 6 then 9 else '' end",
        "dest": "Q1to9"
      },
      {
        "ttype": "concat",
        "rule": "(stockCode, '*', Currency, '$')",
        "dest": "CurStock"
      },
      {
        "ttype": "concat",
        "rule": "(stockCode, '_P')",
        "dest": "PstockCode"
      },
      {
        "ttype": "expression",
        "rule": "case when Q1 = 6 then unitPrice else 0 end",
        "dest": "UPQ1"
      },
      {
        "rule": "case when Q1 = 6 then unitPrice else 0 end",
        "dest": "UPQ2"
      },
      {
        "ttype": "split",
        "rule": "(stockCode = '84406B' or stockCode like '84%') and unitPrice != 2.55",
        "dest": "Q1to92Split"
      },
      {
        "ttype": "where",
        "rule": "1 == 1"
      },
      {
        "ttype": "drop",
        "rule": "UP == 0"
      },
      {
        "ttype": "orderBy",
        "rule": "Q1, randCol DSC"
      },
      {
        "ttype": "distinct",
        "rule": "all"
      },
      {
        "ttype": "distinct",
        "rule": "UPQ2, Q1"
      },
      {
        "ttype": "aggregate",
        "dest": "aggregator"
      },
      {
        "rule": "Q1 + 7",
        "dest": "Q17"
      },
      {
        "ttype": "join",
        "rule": "Q1 != 6",
        "dest": "joiner"
      },
      {
        "ttype": "select",
        "rule": "UP, UPQ1 as UPQ3, UPQ2, PstockCode, Q1, Q1to9, Q1to9 as Q1to92, randCol, Q17"
      }
    ],
    "joins" : [
      {
        "name": "joiner",
        "embed": "resources/joinSample.json",
        "on": "PstockCode == jp and puma == 'OK'",
        "joinType": "",
        "hint": "broadcast",
        "keepOriginal": false,
        "additional_trans": [
          {

          }
        ]
      }
    ],
    "aggregator": [
      {
        "name": "aggregator",
        "keepOriginal": false,
        "aggregates": {
            "column": "Q1, Q1",
            "rule": "sum, count",
            "names": "sum , count"
         },
        "groupBy": "case when Q1 < 4 then 3 else 7 end as Q1, Q1to9",
        "additional_trans": [
          {
            "ttype": "defaultMap",
            "rule": "2.55",
            "dest": "UP"
          },
          {
            "ttype": "defaultMap",
            "rule": "1.78",
            "dest": "UPQ3"
          },
          {
            "ttype": "defaultMap",
            "rule": "1.78",
            "dest": "UPQ3"
          },
          {
            "ttype": "defaultMap",
            "rule": "39",
            "dest": "UPQ1"
          },
          {
            "ttype": "defaultMap",
            "rule": "sum",
            "dest": "UPQ2"
          },
          {
            "ttype": "directMap",
            "rule": "sum",
            "dest": "PstockCode"
          },
          {
            "rule": "rand()",
            "dest": "randCol"
          }
        ]
      }
    ],
    "split": [{
      "name" : "Q1to92Split",
      "dest_row_trans": [
        {
          "rule": "UPQ2 * Q1",
          "dest": "UP"
        },
        {
          "rule": "Q1to9 / 2",
          "dest": "randCol"
        }
      ],
      "source_row_trans": [
        {
          "ttype": "drop",
          "rule": "1 == 1"
        }
      ]
    }],
    "struct": [
      {
        "name": "invoiceno",
        "datatype": "LongType",
        "nullable": true
      },
      {
        "name": "stockCode",
        "datatype": "StringType",
        "nullable": true
      },
      {
        "name": "description",
        "datatype": "StringType",
        "nullable": true
      },
      {
        "name": "quantity",
        "datatype": "IntegerType",
        "nullable": true
      },
      {
        "name": "invoiceDate",
        "datatype": "DateType",
        "nullable": true
      },
      {
        "name": "unitPrice",
        "datatype": "DoubleType",
        "nullable": true
      },
      {
        "name": "customer_id",
        "datatype": "DoubleType",
        "nullable": true
      },
      {
        "name": "country",
        "datatype": "StringType",
        "nullable": true
      }
    ]
}
